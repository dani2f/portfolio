---
import "../styles/styles.css";
import SpeedInsights from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/png" href="/img/logos/logoDaniel.png" />

		<!-- SEO Meta Tags -->
		<meta
			name="description"
			content="Desarrollador Full Stack en Bilbao con experiencia en JavaScript, Laravel y Astro.js. Creando experiencias digitales modernas y optimizadas."
		/>
		<meta
			name="keywords"
			content="Desarrollador Full Stack, Frontend, Backend, JavaScript, React.js, Astro.js, Bilbao, Desarrollo Web"
		/>
		<meta name="author" content="Daniel Gómez" />

		<!-- Open Graph Meta Tags (para compartir en redes) -->
		<meta
			property="og:title"
			content="Daniel Gómez - Desarrollador Full Stack"
		/>
		<meta
			property="og:description"
			content="Desarrollador Full Stack con pasión por la tecnología y el crecimiento profesional."
		/>
		<meta property="og:image" content="/img/logos/logoDaniel.png" />
		<meta property="og:url" content="https://tudominio.com" />
		<meta property="og:type" content="website" />

		<!-- Twitter Card (para mejorar en Twitter/X) -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:title"
			content="Daniel Gómez - Desarrollador Full Stack"
		/>
		<meta
			name="twitter:description"
			content="Desarrollador con pasión por construir y seguir creciendo en el mundo del desarrollo web."
		/>
		<meta name="twitter:image" content="/img/logos/logoDaniel.png" />

		<meta name="generator" content="Astro" />
		<title>Daniel Gómez - Desarrollador Full Stack</title>
	</head>

	<body class="pattern flex flex-col items-center w-full">
		<slot />
		<!-- Tu script con la lógica -->
		<SpeedInsights />
		<script src="/src/scripts/script.js"></script>
	</body>
</html>
<style>
	#observer-debug {
		position: fixed;
		top: 20%;
		bottom: 20%;
		left: 0;
		right: 0;
		background: rgba(255, 0, 0, 0.2); /* Rojo semi-transparente */
		pointer-events: none;
		z-index: 9999;
	}
</style>
