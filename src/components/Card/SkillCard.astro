---
const { title, href, src, alt } = Astro.props;
---

<a
	{...href ? { href, target: "_blank" } : {}}
	class={`w-7 h-7 sm:w-6 sm:h-6 md:w-7 md:h-7 lg:w-8 lg:h-8 xl:w-9 xl:h-9 2xl:w-10 2xl:h-10 bg-[var(--main-background-color)] rounded-md flex items-center justify-center gap-2 transition-all duration-300 hover:bg-[var(--second-background-color)] text-[var(--main-char-color)] text-sm xl:text-base font-thin ${
		src
			? "px-2 py-2 lg:px-4 rounded-md "
			: "px-2 py-[0.15rem] lg:px-4 rounded-[0.14rem] "
	}${title ? "lg:px-4" : "lg:px-[0.5rem]"}`}>
	{
		src && (
			<img alt={alt} src={src} class="w-full lg:w-[1rem] xl:w-[1.2rem]" />
		)
	}
	<div class={`${title ? "flex" : "hidden"}`}>
		{title}
	</div>
</a>
