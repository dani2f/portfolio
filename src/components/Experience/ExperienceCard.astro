---
import SkillCard from "../Card/SkillCard.astro";

const { company, job, date, jobInfo, texts, img } = Astro.props;

// Aseguramos que jobInfo y texts es un array de strings
const jobInfoArray = Array.isArray(jobInfo) ? jobInfo : [];

// Aseguramos que jobInfo y texts es un array de strings
const textsArray = Array.isArray(texts) ? texts : [];
---

<article
	class="flex flex-col items-start justify-center gap-8 second-color-opacity w-[80vw] sm:w-[70vw]
           md:w-[80vw] lg:w-[60rem] h-full p-10 rounded lg:rounded-lg">
	<div
		class="flex flex-col lg:flex-row items-center justify-between w-full gap-4 lg:gap-0">
		<div class="flex flex-row items-center justify-start w-full gap-8">
			<div class="w-[4rem]">
				<img
					class="max-w-[5rem] md:max-w-[4rem] lg:max-w-[5rem] xl:max-w-[7rem] object-contain w-full h-full"
					src={img}
					alt="Logo 1"
				/>
			</div>
			<!-- <img
				class="max-w-[5rem] md:max-w-[4rem] lg:max-w-[5rem] xl:max-w-[7rem] object-contain w-[5rem]"
				src={img}
				alt="Logo 1"
			/> -->
			<div class="flex flex-col items-start justify-between">
				<h2
					class="font-special text-[var(--main-char-color)] text-[1.3rem] xl:text-[1.4rem] 2xl:text-[1.7rem] w-full">
					{company}
				</h2>
				<p
					class="text-[var(--second-char-color)] text-[0.9rem] xl:text-[1rem]">
					{job}
				</p>
			</div>
		</div>

		<div
			class="w-full h-full flex flex-col-reverse lg:flex-col items-start lg:items-end justify-between gap-2">
			<p
				class="text-[var(--second-char-color)] text-[0.9rem] xl:text-[1rem]">
				{date}
			</p>
			<div
				class="flex flex-row items-center lg:justify-end gap-1 w-full flex-wrap">
				<SkillCard alt="Github logo" title={`${jobInfoArray[0]}`} />
				<SkillCard alt="Github logo" title={`${jobInfoArray[1]}`} />
				<SkillCard alt="Github logo" title={`${jobInfoArray[2]}`} />
			</div>
		</div>
	</div>
	<ul
		class="list-disc list-inside text-[var(--main-char-color)] text-[0.9rem] xl:text-[1rem]">
		{textsArray && textsArray.map((text) => <li>{text}</li>)}
	</ul>
</article>
