---
import TechnologiesCard from "./TechnologiesCard.astro";
---

<section
	id="technologiesSection"
	class="w-full flex flex-col justify-center items-center gap-4 mb-[5rem]">
	<h2
		class="text-5xl sm:text-[3.7rem] md:text-[5rem] lg:text-[6.3rem] xl:text-[7.3rem]
    2xl:text-[8rem] text-[var(--original-color)] font-special z-20 mb-[-1.7rem] sm:mb-[-1.9rem] md:mb-[-2.3rem] xl:mb-[-2.65rem] 2xl:mb-[-2.9rem]">
		Tecnologías
	</h2>

	<article
		class="flex flex-col items-start justify-start gap-4 border-l-[var(--main-char-color)] border-l-[1px] pl-4 w-[80vw] h-full sm:w-[70vw]
		   md:w-[80vw] lg:w-[60rem] mt-[5rem] z-10">
		<!-- Caja para Frontend -->
		<div class="flex flex-col items-start justify-center gap-4 relative">
			<!-- Bola: posición final, su borde superior se ubica un poco más abajo -->
			<div
				class="absolute top-[0.42rem] left-[-1.533rem] sm:left-[-1.53rem] w-4 h-4 bg-white rounded-full shadow-[0_0_8px_rgba(255,255,255,0.8)]">
			</div>

			<h3 class="text-2xl font-standard font-normal">Frontend</h3>
			<div class="flex flex-row flex-wrap items-center gap-4">
				<TechnologiesCard
					title="HTM5"
					src="/img/icons/techIcons/frontend/iconHTML5.svg"
				/>
				<TechnologiesCard
					title="CSS"
					src="/img/icons/techIcons/frontend/iconCSS.svg"
				/>
				<TechnologiesCard
					title="JavaScript"
					src="/img/icons/techIcons/frontend/iconJavaScript.svg"
				/>
				<TechnologiesCard
					title="TypeScript"
					src="/img/icons/techIcons/frontend/iconTypeScript.svg"
				/>
				<TechnologiesCard
					title="Tailwind"
					src="/img/icons/techIcons/frontend/iconTailwind.svg"
				/>
				<TechnologiesCard
					title="Angular"
					src="/img/icons/techIcons/frontend/iconAngular.svg"
				/>
				<TechnologiesCard
					title="React"
					src="/img/icons/techIcons/frontend/iconReact.svg"
				/>
				<TechnologiesCard
					title="Astro"
					src="/img/icons/techIcons/frontend/iconAstro.svg"
				/>
				<TechnologiesCard
					title="Bootstrap"
					src="/img/icons/techIcons/frontend/iconBootstrap.svg"
				/>
			</div>
		</div>

		<!-- Caja para Backend -->
		<div class="flex flex-col items-start justify-center gap-4 relative">
			<!-- Bola para Backend -->
			<div
				class="absolute top-[0.42rem] left-[-1.533rem] sm:left-[-1.53rem] w-4 h-4 bg-white rounded-full shadow-[0_0_8px_rgba(255,255,255,0.8)]">
			</div>

			<h3 class="text-2xl font-standard font-normal">Backend</h3>
			<div class="flex flex-row flex-wrap items-center gap-4">
				<TechnologiesCard
					title="PHP"
					src="/img/icons/techIcons/backend/iconPhp.svg"
				/>
				<TechnologiesCard
					title="Java"
					src="/img/icons/techIcons/backend/iconJava.svg"
				/>
				<TechnologiesCard
					title="Python"
					src="/img/icons/techIcons/backend/iconPython.svg"
				/>
				<TechnologiesCard
					title="C#"
					src="/img/icons/techIcons/backend/iconCSharp.svg"
				/>
				<TechnologiesCard
					title="MySql"
					src="/img/icons/techIcons/backend/iconMySql.svg"
				/>
				<TechnologiesCard
					title="Laravel"
					src="/img/icons/techIcons/backend/iconLaravel.svg"
				/>
				<TechnologiesCard
					title="HeidiSQL"
					src="/img/icons/techIcons/backend/iconHeidiSQL.webp"
				/>
			</div>
		</div>

		<!-- Caja para Diseño -->
		<div class="flex flex-col items-start justify-center gap-4 relative">
			<!-- Bola para diseño -->
			<div
				class="absolute top-[0.42rem] left-[-1.533rem] sm:left-[-1.53rem] w-4 h-4 bg-white rounded-full shadow-[0_0_8px_rgba(255,255,255,0.8)]">
			</div>

			<h3 class="text-2xl font-standard font-normal">Diseño</h3>
			<div class="flex flex-row flex-wrap items-center gap-4">
				<TechnologiesCard
					title="Photoshop"
					src="/img/icons/techIcons/design/iconPhotoshop.svg"
				/>
				<TechnologiesCard
					title="Illustrator"
					src="/img/icons/techIcons/design/iconIllustrator.svg"
				/>
				<TechnologiesCard
					title="After Effects"
					src="/img/icons/techIcons/design/iconAfterEffects.svg"
				/>
				<TechnologiesCard
					title="Figma"
					src="/img/icons/techIcons/design/iconFigma.svg"
				/>
				<TechnologiesCard
					title="Maya"
					src="/img/icons/techIcons/design/iconMaya.svg"
				/>
				<TechnologiesCard
					title="Keyshot"
					src="/img/icons/techIcons/design/iconKeyshot.svg"
				/>
			</div>
		</div>

		<!-- Caja para Otros -->
		<div class="flex flex-col items-start justify-center gap-4 relative">
			<!-- Bola para otros -->
			<div
				class="absolute top-[0.42rem] left-[-1.533rem] sm:left-[-1.53rem] w-4 h-4 bg-white rounded-full shadow-[0_0_8px_rgba(255,255,255,0.8)]">
			</div>

			<h3 class="text-2xl font-standard font-normal">Otros</h3>
			<div class="flex flex-row flex-wrap items-center gap-4">
				<TechnologiesCard
					title="Git"
					src="/img/icons/techIcons/other/iconGit.svg"
				/>
				<TechnologiesCard
					title="Github"
					src="/img/icons/techIcons/other/iconGithub.svg"
				/>
				<TechnologiesCard
					title="WordPress"
					src="/img/icons/techIcons/other/iconWordPress.svg"
				/>
				<TechnologiesCard
					title="Unity"
					src="/img/icons/techIcons/other/iconUnity.svg"
				/>
			</div>
		</div>
	</article>
</section>
