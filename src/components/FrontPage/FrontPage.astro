---
import SkillCard from "../Card/SkillCard.astro";
---

<section
	id="frontPageSection"
	class="w-full lg:w-[60rem] h-[100vh] flex flex-row justify-center items-center gap-4 relative">
	<div
		class="absolute top-[-50px] left-1/2 -translate-x-1/2 -translate-y-1/2 w-[100%] md:w-[150%] h-[170vh] bg-[var(--second-background-color)] rounded-full blur-[50px] opacity-40 -z-10 lg:h-[200vh] xl-h[170vh] xl:w-[300%] ">
	</div>

	<article class="w-full flex flex-col items-center justify-center gap-4">
		<div
			class="w-full flex flex-col items-center lg:items-start justify-center">
			<h1
				class="text-[2.6rem] sm:text-[3.7rem] md:text-[5rem] lg:text-[3.8rem] xl:text-[3.5rem]
		text-[var(--original-color)] fade-left"
				data-animate>
				DANIEL GÓMEZ
			</h1>
			<h2
				class="text-[1.5rem] sm:text-[2.1rem] md:text-[2.8rem] lg:text-[2.18rem]
		xl:text-[2rem] font-special text-[var(--second-char-color)] fade-left"
				data-animate>
				Desarrollador full stack
			</h2>
		</div>

		<nav
			class="flex flex-row items-center justify-center lg:justify-start gap-4 w-full fade-left"
			data-animate>
			<SkillCard
				href="/img/certificates/cv.pdf"
				src="/img/icons/iconCv.svg"
				alt="CV logo"
			/>

			<SkillCard
				href="mailto:daniprgm@gmail.com"
				src="/img/icons/iconMail.svg"
				alt="CV logo"
			/>
		</nav>
	</article>

<article
  class="w-full h-[40vh] hidden lg:flex relative overflow-hidden" 
  data-animate
>
  <img
    src="/img/portadaDani.webp"
    alt="Daniel Gómez"
    class="w-full h-full object-cover object-top z-0"
  />

  <!-- Capa de difuminado radial encima -->
  <div class="absolute inset-0 z-10 pointer-events-none"
     style="background: radial-gradient(ellipse at center, transparent 40%, #222B33 70%, #222B33 40%);">
</div>


  <!-- También podrías usar gradientes laterales si prefieres -->
</article>






	<!-- <img
		src="/img/"
		alt="Background"
		class="w-full h-[80vh] object-cover hidden lg:flex"
	/> -->
</section>
